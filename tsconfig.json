{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "types": [
      "vite/client",
      "unplugin-icons/types/vue",
      "unplugin-vue-router/client"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue", "*.d.ts"],
  "exclude": ["**/assets/**", "**/public/**"]
}
